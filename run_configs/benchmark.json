{
    "seed": 666,
    "benchmark": {
        "dataflow.augmentors": ["normalize"],
        "models.model_def": [
            {
                "type": "cnn_benchmark.models.models_def.squeezenet"
            }
        ],
        "models.embedding_dim": [256, 512],
        "models.learning_rate": [0.001]
    },
    "data": {
        "data_dir": "data/glamira-products",
        "num_labels": 5256, 
        "image_size": 160
    },
    "dataflow": {
        "validation_split_ratio": 0.1,
        "batch_size": 32,
        "num_parallel": 12,
        "augmentors": "normalize"
    },
    "models": {
        "type": "external",
        "model_def": "cnn_benchmark.models.models_def.resnet",
        "embedding_dim": 512,
        "keep_pr": 0.5,
        "l2_regular": 1e-3,
        "optimizer": "ADAM",
        "learning_rate": 0.001
    },
    "trainer": {
        "num_gpus": 1,
        "num_epochs": 1,
        "steps_per_epoch": 1000
    },
    "callbacks": {
        "MLflowLogging": {
            "priority": 10,
            "experiment_name": "CNN Benchmark",
            "stats": ["loss", "val_loss", "train-top1-error", "val-top1-error"],
            "params": {
                "augmentors": {
                    "dependency": "dataflow.augmentors"
                },
                "model_def": {
                    "dependency": "models.model_def"
                },
                "embedding_dim": {
                    "dependency": "models.embedding_dim"
                },
                "learning_rate": {
                    "dependency": "models.learning_rate"
                }
            },
            "tracking_uri": "train_logs/mlruns"
        },
        "ExponentialDecayHyperParamSetter": {
            "priority": 1,
            "param": "learning_rate",
            "init_value": {
                "dependency": "models.learning_rate"
            },
            "decay_steps": 20000,
            "decay_rate": 0.95,
            "staircase" : 1
        }
    }
}