{
    local lr = 0.001,
    local model_def = "src.models.models_def.resnet",
    local embedding_dim = 512,
    "seed": 666,
    "pretrain_weight": "",
    "data": {
        "data_dir": "data/raw/glamira-all-product-2-view/sku_image",
        "num_labels": 5256, 
        "image_size": 160
    },
    "dataflow": {
        "data_dir": "/media/disk2/thanhtc/processed-image-2-vec/data/processed/glamira-all-product-2-view-fixed/sku_image",
        "validation_split_ratio": 0.1,
        "batch_size": 32,
        "num_parallel": 12,
        // "augmentors": "flip_rotate_normalize" // choices=['', 'standard', 'fbresnet', 'flip_rotate_normalize'] or specify below:
        "augmentors": {
            "training": {
                "MeanVarianceNormalize": {
                    "priority": 1,
                    "all_channel": 1
                }
            },
            "test": {
                "MeanVarianceNormalize": {
                    "priority": 1,
                    "all_channel": 1
                }
            }
        }
    },
    "models": {
        "type": "external",
        "model_def": model_def,
        "embedding_dim": embedding_dim,
        "keep_pr": 0.5,
        "l2_regular": 1e-3,
        "optimizer": "ADAM",
        "lr": lr
    },
    "trainer": {
        "num_gpus": 1,
        "num_epochs": 100,
        "steps_per_epoch": 1000
    },
    "callbacks": {
        // "LoadPretrainWeight": {
        //     "priority": 100,
        //     "checkpoint_path": "",
        //     "scope": ""
        // },
        "MLflowLogging": {
            "priority": 1,
            "experiment_name": "CNN Benchmark",
            "stats": ["loss", "val_loss", "train-top1-error", "val-top1-error"],
            "params": {
                "model_def": model_def,
                "embedding_dim": embedding_dim,
                "lr": lr
            }
        },
        "ExponentialDecayHyperParamSetter": {
            "priority": 1,
            "param": "learning_rate",
            "init_value": lr,
            "decay_steps": 20000,
            "decay_rate": 0.95,
            "staircase" : 1
        }
    }
}